Subject: [PATCH] Hotkeys: audio volume step by 5

---
 src/frontend-common/common_host.cpp | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/src/frontend-common/common_host.cpp b/src/frontend-common/common_host.cpp
index 931a509..30e4386 100644
--- a/src/frontend-common/common_host.cpp
+++ b/src/frontend-common/common_host.cpp
@@ -947,7 +947,7 @@ DEFINE_HOTKEY("AudioVolumeUp", TRANSLATABLE("Hotkeys", "Audio"), TRANSLATABLE("H
   {
     g_settings.audio_output_muted = false;
 
-    const s32 volume = std::min<s32>(System::GetAudioOutputVolume() + 10, 100);
+    const s32 volume = std::min<s32>(System::GetAudioOutputVolume() + 5, 100);
     g_settings.audio_output_volume = volume;
     g_settings.audio_fast_forward_volume = volume;
     // g_spu.GetOutputStream()->SetOutputVolume(volume);
@@ -961,7 +961,7 @@ DEFINE_HOTKEY("AudioVolumeDown", TRANSLATABLE("Hotkeys", "Audio"), TRANSLATABLE(
                 {
                   g_settings.audio_output_muted = false;
 
-                  const s32 volume = std::max<s32>(System::GetAudioOutputVolume() - 10, 0);
+                  const s32 volume = std::max<s32>(System::GetAudioOutputVolume() - 5, 0);
                   g_settings.audio_output_volume = volume;
                   g_settings.audio_fast_forward_volume = volume;
                   // g_spu.GetOutputStream()->SetOutputVolume(volume);
