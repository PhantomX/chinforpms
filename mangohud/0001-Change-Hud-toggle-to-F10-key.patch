From 0013a9bff02b4ae65cbb753871a830c5e3c85fb0 Mon Sep 17 00:00:00 2001
From: Phantom X <PhantomX@users.noreply.github.com>
Date: Wed, 5 Feb 2020 11:13:20 -0300
Subject: [PATCH] Change Hud toggle to F10 key

---
 README.md       | 2 +-
 src/keybinds.h  | 4 ++--
 src/overlay.cpp | 8 ++++----
 3 files changed, 7 insertions(+), 7 deletions(-)

diff --git a/README.md b/README.md
index 9c9ffeb..5dac7a3 100644
--- a/README.md
+++ b/README.md
@@ -61,7 +61,7 @@ Example: `MANGOHUD_CONFIG=cpu_temp,gpu_temp,position=top-right,height=500,font_s
 ## Keybindings
 
 - `F2` : Toggle Logging
-- `F12`: Toggle Hud
+- `F10`: Toggle Hud
 
 ## MangoHud FPS logging
 
diff --git a/src/keybinds.h b/src/keybinds.h
index 2fa403f..45d7872 100644
--- a/src/keybinds.h
+++ b/src/keybinds.h
@@ -3,8 +3,8 @@
 #include "X11/keysym.h"
 #include "mesa/util/os_time.h"
 
-double elapsedF2, elapsedF12;
-uint64_t last_f2_press, last_f12_press;
+double elapsedF2, elapsedF10;
+uint64_t last_f2_press, last_f10_press;
 pthread_t f2;
 char *displayid = getenv("DISPLAY");
 Display *dpy = XOpenDisplay(displayid);
diff --git a/src/overlay.cpp b/src/overlay.cpp
index 41dba74..9e437a4 100644
--- a/src/overlay.cpp
+++ b/src/overlay.cpp
@@ -795,7 +795,7 @@ static void snapshot_swapchain_frame(struct swapchain_data *data)
 
    double elapsed = (double)(now - data->last_fps_update); /* us */
    elapsedF2 = (double)(now - last_f2_press);
-   elapsedF12 = (double)(now - last_f12_press);
+   elapsedF10 = (double)(now - last_f10_press);
    fps = 1000000.0f * data->n_frames_since_update / elapsed;
 
    if (data->last_present_time) {
@@ -821,10 +821,10 @@ static void snapshot_swapchain_frame(struct swapchain_data *data)
      }
    }
    
-   if (elapsedF12 >= 500000){
-     if (key_is_pressed(XK_F12)){
+   if (elapsedF10 >= 500000){
+     if (key_is_pressed(XK_F10)){
        displayHud = !displayHud;
-       last_f12_press = now;
+       last_f10_press = now;
      }
    }
 
