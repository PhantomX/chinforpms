From 125c97316071dc6052c288d47b1e1014921a12dc Mon Sep 17 00:00:00 2001
From: Phantom X <PhantomX@users.noreply.github.com>
Date: Tue, 14 Mar 2023 11:59:09 -0300
Subject: [PATCH] UI: tweak some font scale to desktop view

---
 UI/EmuScreen.cpp | 8 ++++----
 UI/Theme.cpp     | 6 +++---
 2 files changed, 7 insertions(+), 7 deletions(-)

diff --git a/UI/EmuScreen.cpp b/UI/EmuScreen.cpp
index 231a695..962e24b 100644
--- a/UI/EmuScreen.cpp
+++ b/UI/EmuScreen.cpp
@@ -1206,7 +1206,7 @@ static void DrawCrashDump(UIContext *ctx, const Path &gamePath) {
 	ctx->Flush();
 	if (ctx->Draw()->GetFontAtlas()->getFont(ubuntu24))
 		ctx->BindFontTexture();
-	ctx->Draw()->SetFontScale(1.1f, 1.1f);
+	ctx->Draw()->SetFontScale(0.4f, 0.4f);
 	ctx->Draw()->DrawTextShadow(ubuntu24, sy->T("Game crashed"), x, y, 0xFFFFFFFF);
 
 	char statbuf[4096];
@@ -1257,7 +1257,7 @@ static void DrawCrashDump(UIContext *ctx, const Path &gamePath) {
 		crcStr
 	);
 
-	ctx->Draw()->SetFontScale(.7f, .7f);
+	ctx->Draw()->SetFontScale(0.4f, 0.4f);
 	ctx->Draw()->DrawTextShadow(ubuntu24, statbuf, x, y, 0xFFFFFFFF);
 	y += 160;
 
@@ -1305,7 +1305,7 @@ Invalid / Unknown (%d)
 
 	y += 40;
 
-	ctx->Draw()->SetFontScale(.5f, .5f);
+	ctx->Draw()->SetFontScale(0.4f, 0.4f);
 
 	ctx->Draw()->DrawTextShadow(ubuntu24, info.stackTrace.c_str(), x, y, 0xFFFFFFFF);
 
@@ -1356,7 +1356,7 @@ static void DrawFPS(UIContext *ctx, const Bounds &bounds) {
 
 	ctx->Flush();
 	ctx->BindFontTexture();
-	ctx->Draw()->SetFontScale(0.7f, 0.7f);
+	ctx->Draw()->SetFontScale(0.4f, 0.4f);
 	ctx->Draw()->DrawText(ubuntu24, fpsbuf, bounds.x2() - 8, 20, 0xc0000000, ALIGN_TOPRIGHT | FLAG_DYNAMIC_ASCII);
 	ctx->Draw()->DrawText(ubuntu24, fpsbuf, bounds.x2() - 10, 19, 0xFF3fFF3f, ALIGN_TOPRIGHT | FLAG_DYNAMIC_ASCII);
 	ctx->Draw()->SetFontScale(1.0f, 1.0f);
diff --git a/UI/Theme.cpp b/UI/Theme.cpp
index c59a591..7bd7664 100644
--- a/UI/Theme.cpp
+++ b/UI/Theme.cpp
@@ -194,9 +194,9 @@ void UpdateTheme(UIContext *ctx) {
 	ui_theme.uiFontSmall = UI::FontStyle(FontID("UBUNTU24"), g_Config.sFont.c_str(), 17);
 	ui_theme.uiFontSmaller = UI::FontStyle(FontID("UBUNTU24"), g_Config.sFont.c_str(), 13);
 #else
-	ui_theme.uiFont = UI::FontStyle(FontID("UBUNTU24"), "", 20);
-	ui_theme.uiFontSmall = UI::FontStyle(FontID("UBUNTU24"), "", 15);
-	ui_theme.uiFontSmaller = UI::FontStyle(FontID("UBUNTU24"), "", 12);
+	ui_theme.uiFont = UI::FontStyle(FontID("UBUNTU24"), "", 13);
+	ui_theme.uiFontSmall = UI::FontStyle(FontID("UBUNTU24"), "", 11);
+	ui_theme.uiFontSmaller = UI::FontStyle(FontID("UBUNTU24"), "", 10);
 #endif
 
 	ui_theme.checkOn = ImageID("I_CHECKEDBOX");
