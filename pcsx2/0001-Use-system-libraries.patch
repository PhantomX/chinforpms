index 1ff7563..d3b1045 100644
--- a/pcsx2/GS/Renderers/SW/GSNewCodeGenerator.h
+++ b/pcsx2/GS/Renderers/SW/GSNewCodeGenerator.h
@@ -14,8 +14,8 @@
 #define XBYAK_NO_OP_NAMES
