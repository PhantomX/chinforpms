From 77d7c0dcee9d62d2714ed04bc2e2ebd2092dcf0c Mon Sep 17 00:00:00 2001
From: Phantom X <PhantomX@users.noreply.github.com>
Date: Tue, 21 Jul 2020 15:48:27 -0300
Subject: [PATCH] Use system libs

---
 core/core.mk         | 37 ++++++++++++++++++++++++++++++++-----
 core/imgread/chd.cpp |  4 ++++
 shell/linux/Makefile | 40 ++++++++++++++++++++++++++++++++++++++++
 3 files changed, 76 insertions(+), 5 deletions(-)

diff --git a/core/core.mk b/core/core.mk
index 7d82416..66725ca 100755
--- a/core/core.mk
+++ b/core/core.mk
@@ -10,9 +10,21 @@ VERSION_HEADER := $(RZDCY_SRC_DIR)/version.h
 
 RZDCY_MODULES	:=	cfg/ hw/arm7/ hw/aica/ hw/holly/ hw/ hw/gdrom/ hw/maple/ \
  hw/mem/ hw/pvr/ hw/sh4/ hw/sh4/interpr/ hw/sh4/modules/ plugins/ profiler/ oslib/ \
- hw/extdev/ hw/arm/ hw/naomi/ imgread/ ./ deps/coreio/ deps/zlib/ deps/chdr/ deps/crypto/ \
+ hw/extdev/ hw/arm/ hw/naomi/ imgread/ ./ deps/coreio/ \
  deps/libelf/ deps/chdpsr/ arm_emitter/ rend/ reios/ deps/xbrz/ \
- deps/libzip/ deps/imgui/ archive/ input/ log/ wsi/ network/
+ deps/imgui/ archive/ input/ log/ wsi/ network/
+
+ifndef SYSTEM_CHDR
+RZDCY_MODULES +=   deps/chdr/ deps/crypto/
+endif
+
+ifndef SYSTEM_LIBZIP
+RZDCY_MODULES +=  deps/libzip/
+endif
+
+ifndef SYSTEM_ZLIB
+RZDCY_MODULES +=  deps/zlib/
+endif
 
 ifndef NOT_ARM
     RZDCY_MODULES += rec-ARM/
@@ -156,21 +168,36 @@ ifdef USE_GLES
   RZDCY_CFLAGS += -DGLES -fPIC
 endif
 
+RZDCY_MODULES += deps/lzma/
+RZDCY_CFLAGS += -D_7ZIP_ST
+
+ifndef SYSTEM_CHDR
 ifdef CHD5_FLAC
+ifdef SYSTEM_FLAC
+	RZDCY_CFLAGS += -DCHD5_FLAC -DHAVE_CONFIG_H
+else
 	RZDCY_CFLAGS += -DCHD5_FLAC -I$(RZDCY_SRC_DIR)/deps/flac/src/libFLAC/include/ -I$(RZDCY_SRC_DIR)/deps/flac/include
 	RZDCY_CFLAGS += -DHAVE_CONFIG_H
 	RZDCY_MODULES += deps/flac/src/libFLAC/
 endif
+endif
 
 # 7-Zip/LZMA settings (CHDv5)
 ifdef CHD5_LZMA
-	RZDCY_MODULES += deps/lzma/
-	RZDCY_CFLAGS += -D_7ZIP_ST -DCHD5_LZMA
+	RZDCY_CFLAGS += -DCHD5_LZMA
+endif
 endif
 
+ifndef SYSTEM_LIBZIP
 RZDCY_CFLAGS += -I$(RZDCY_SRC_DIR)/deps/libzip
+endif
+ifndef SYSTEM_ZLIB
 RZDCY_CFLAGS += -DZ_HAVE_UNISTD_H -I$(RZDCY_SRC_DIR)/deps/zlib
-RZDCY_CFLAGS += -DXXH_INLINE_ALL -I$(RZDCY_SRC_DIR)/deps/xxHash -I$(RZDCY_SRC_DIR)/deps/stb
+endif
+ifndef SYSTEM_XXHASH
+RZDCY_CFLAGS += -DXXH_INLINE_ALL -I$(RZDCY_SRC_DIR)/deps/xxHash
+endif
+RZDCY_CFLAGS += -I$(RZDCY_SRC_DIR)/deps/stb
 
 RZDCY_CXXFLAGS := $(RZDCY_CFLAGS) -fno-rtti -std=c++11
 
diff --git a/core/imgread/chd.cpp b/core/imgread/chd.cpp
index 3a55f80..79fabda 100644
--- a/core/imgread/chd.cpp
+++ b/core/imgread/chd.cpp
@@ -1,6 +1,10 @@
 #include "common.h"
 
+#ifdef SYSTEM_CHDR
+#include <chd.h>
+#else
 #include "deps/chdr/chd.h"
+#endif
 
 /* tracks are padded to a multiple of this many frames */
 const uint32_t CD_TRACK_PADDING = 4;
diff --git a/shell/linux/Makefile b/shell/linux/Makefile
index 1b05841..5605cdc 100644
--- a/shell/linux/Makefile
+++ b/shell/linux/Makefile
@@ -14,6 +14,13 @@ endif
 USE_MODEM := 1
 PLATFORM_EXT := elf
 
+#SYSTEM_CHDR := 1
+SYSTEM_FLAC := 1
+SYSTEM_LIBPNG := 1
+SYSTEM_LIBZIP := 1
+SYSTEM_XXHASH := 1
+SYSTEM_ZLIB := 1
+
 CXX ?= ${CC_PREFIX}g++
 CC ?= ${CC_PREFIX}gcc
 AS ?= ${CC_PREFIX}as
@@ -417,6 +424,39 @@ ifdef DEBUGFAST
     CFLAGS += -DDEBUGFAST
 endif
 
+ifdef SYSTEM_CHDR
+    CFLAGS += `pkg-config --cflags libchdr` -D SYSTEM_CHDR
+    CXXFLAGS += `pkg-config --cflags libchdr` -D SYSTEM_CHDR
+    LIBS += `pkg-config --libs libchdr`
+else
+ifdef SYSTEM_FLAC
+    CFLAGS += `pkg-config --cflags flac`
+    CXXFLAGS += `pkg-config --cflags flac`
+    LIBS += `pkg-config --libs flac`
+endif
+endif
+
+ifdef SYSTEM_LIBPNG
+    CXXFLAGS += `pkg-config --cflags libpng`
+    LIBS += `pkg-config --libs libpng`
+endif
+
+ifdef SYSTEM_LIBZIP
+    CXXFLAGS += `pkg-config --cflags libzip` -D SYSTEM_LIBZIP
+    LIBS += `pkg-config --libs libzip`
+endif
+
+ifdef SYSTEM_XXHASH
+    CXXFLAGS += -D SYSTEM_XXHASH
+    LIBS += -lxxhash
+endif
+
+ifdef SYSTEM_ZLIB
+    CFLAGS += `pkg-config --cflags zlib` -D SYSTEM_ZLIB
+    CXXFLAGS += `pkg-config --cflags zlib` -D SYSTEM_ZLIB
+    LIBS += `pkg-config --libs zlib`
+endif
+
 ifdef UNIT_TESTS
     CFLAGS += -DUNIT_TESTS
 endif
-- 
