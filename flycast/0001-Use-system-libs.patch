diff --git a/CMakeLists.txt b/CMakeLists.txt
index 78981cb..49eef35 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -20,6 +20,9 @@ option(LIBRETRO "Build libretro core" OFF)
