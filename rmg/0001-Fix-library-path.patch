From: Phantom X <PhantomX@users.noreply.github.com>
Date: Sun, 13 Nov 2022 18:23:10 -0300
Subject: [PATCH] Fix library path

---
 CMakeLists.txt                  | 4 ++--
 Source/RMG-Core/Directories.cpp | 4 ++--
 2 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index 7f7a004..b3fdf77 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -32,8 +32,8 @@ if (PORTABLE_INSTALL)
     set(INSTALL_DESKTOP_FILE OFF)
 else()
     set(RMG_INSTALL_PATH "bin")
-    set(CORE_INSTALL_PATH "lib/RMG/Core")
-    set(PLUGIN_INSTALL_PATH "lib/RMG/Plugin")
+    set(CORE_INSTALL_PATH "lib${LIB_SUFFIX}/RMG/Core")
+    set(PLUGIN_INSTALL_PATH "lib${LIB_SUFFIX}/RMG/Plugin")
     set(DATA_INSTALL_PATH "share/RMG")
     set(INSTALL_DESKTOP_FILE ON)
     set(APPDATA_INSTALL_PATH "share/metainfo/")
diff --git a/Source/RMG-Core/Directories.cpp b/Source/RMG-Core/Directories.cpp
index 7074646..de6a608 100644
--- a/Source/RMG-Core/Directories.cpp
+++ b/Source/RMG-Core/Directories.cpp
@@ -124,7 +124,7 @@ std::string CoreGetCoreDirectory(void)
     directory = "Core";
 #else // Not Portable
     directory = CORE_INSTALL_PREFIX;
-    directory += "/lib/RMG/Core";
+    directory += "/_LIBDIR_/RMG/Core";
 #endif // PORTABLE_INSTALL
     return directory;
 }
@@ -136,7 +136,7 @@ std::string CoreGetPluginDirectory(void)
     directory = "Plugin";
 #else // Not Portable
     directory = CORE_INSTALL_PREFIX;
-    directory += "/lib/RMG/Plugin";
+    directory += "/_LIBDIR_/RMG/Plugin";
 #endif // PORTABLE_INSTALL
     return directory;
 }
