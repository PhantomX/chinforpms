From: Phantom X <PhantomX@users.noreply.github.com>
Date: Fri, 25 Feb 2022 09:07:50 -0300
Subject: [PATCH] Disable setuptools_scm version check

---
 pyproject.toml       | 4 +---
 requirements_dev.txt | 1 -
 setup.py             | 3 ---
 3 files changed, 1 insertion(+), 7 deletions(-)

diff --git a/pyproject.toml b/pyproject.toml
index 0bc4247..8d91941 100644
--- a/pyproject.toml
+++ b/pyproject.toml
@@ -1,8 +1,6 @@
 [build-system]
 requires = [
     "setuptools",
-    "wheel",
-    "setuptools-scm < 6 ; python_version <= '3.5'",
-    "setuptools-scm ; python_version > '3.5'"
+    "wheel"
 ]
 build-backend = "setuptools.build_meta"
diff --git a/requirements_dev.txt b/requirements_dev.txt
index 2dd3d35..8a7523c 100644
--- a/requirements_dev.txt
+++ b/requirements_dev.txt
@@ -1,3 +1,2 @@
 pytest>=6.0
 pytest-cov>=2.10
-setuptools-scm
diff --git a/setup.py b/setup.py
index d10780c..854816d 100644
--- a/setup.py
+++ b/setup.py
@@ -16,9 +16,6 @@ URL = "https://github.com/Matoking/protontricks"
 
 setup(
     name="protontricks",
-    use_scm_version={
-        "write_to": "src/protontricks/_version.py"
-    },
     description=DESCRIPTION,
     long_description=LONG_DESCRIPTION,
     data_files=[
