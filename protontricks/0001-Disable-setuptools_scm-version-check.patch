From: Phantom X <PhantomX@users.noreply.github.com>
Date: Fri, 25 Feb 2022 09:07:50 -0300
Subject: [PATCH] Disable setuptools_scm version check

---
 pyproject.toml       | 7 +------
 requirements_dev.txt | 1 -
 setup.cfg            | 2 --
 3 files changed, 1 insertion(+), 9 deletions(-)

diff --git a/pyproject.toml b/pyproject.toml
index 8b963cc..8d91941 100644
--- a/pyproject.toml
+++ b/pyproject.toml
@@ -1,11 +1,6 @@
 [build-system]
 requires = [
     "setuptools",
-    "wheel",
-    "setuptools-scm < 6 ; python_version <= '3.5'",
-    "setuptools-scm ; python_version > '3.5'"
+    "wheel"
 ]
 build-backend = "setuptools.build_meta"
-
-[tool.setuptools_scm]
-write_to = "src/protontricks/_version.py"
diff --git a/requirements_dev.txt b/requirements_dev.txt
index 2dd3d35..8a7523c 100644
--- a/requirements_dev.txt
+++ b/requirements_dev.txt
@@ -1,3 +1,2 @@
 pytest>=6.0
 pytest-cov>=2.10
-setuptools-scm
diff --git a/setup.cfg b/setup.cfg
index 79f1e23..3e6b6bd 100644
--- a/setup.cfg
+++ b/setup.cfg
@@ -29,8 +29,6 @@ include_package_data = True
 install_requires =
     setuptools  # Required for pkg_resources
     vdf>=3.2
-setup_requires =
-    setuptools-scm
 python_requires = >=3.6
 
 [options.entry_points]
