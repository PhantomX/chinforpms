From: Phantom X <PhantomX@users.noreply.github.com>
Date: Fri, 25 Feb 2022 09:07:50 -0300
Subject: [PATCH] Disable setuptools_scm version check

---
 pyproject.toml       | 3 +--
 requirements_dev.txt | 1 -
 setup.cfg            | 2 --
 3 files changed, 1 insertion(+), 5 deletions(-)

diff --git a/pyproject.toml b/pyproject.toml
index 3ef46f0..62cd507 100644
--- a/pyproject.toml
+++ b/pyproject.toml
@@ -1,8 +1,7 @@
 [build-system]
 requires = [
     "setuptools",
-    "wheel",
-    "setuptools-scm"
+    "wheel"
 ]
 build-backend = "setuptools.build_meta"
 
diff --git a/requirements_dev.txt b/requirements_dev.txt
index 2dd3d35..8a7523c 100644
--- a/requirements_dev.txt
+++ b/requirements_dev.txt
@@ -1,3 +1,2 @@
 pytest>=6.0
 pytest-cov>=2.10
-setuptools-scm
diff --git a/setup.cfg b/setup.cfg
index dfee4fe..88e0b57 100644
--- a/setup.cfg
+++ b/setup.cfg
@@ -29,8 +29,6 @@ include_package_data = True
 install_requires =
     setuptools  # Required for pkg_resources
     vdf>=3.2
-setup_requires =
-    setuptools-scm
 python_requires = >=3.6
 
 [options.packages.find]
