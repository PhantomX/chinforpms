From: Phantom X <PhantomX@users.noreply.github.com>
Date: Fri, 25 Feb 2022 09:07:50 -0300
Subject: [PATCH] Disable setuptools_scm version check

---
 pyproject.toml       | 6 +-----
 requirements_dev.txt | 1 -
 setup.cfg            | 2 --
 3 files changed, 1 insertion(+), 8 deletions(-)

diff --git a/pyproject.toml b/pyproject.toml
index ce699ac..2da0754 100644
--- a/pyproject.toml
+++ b/pyproject.toml
@@ -1,14 +1,10 @@
 [build-system]
 requires = [
     "setuptools",
-    "wheel",
-    "setuptools-scm"
+    "wheel"
 ]
 build-backend = "setuptools.build_meta"
 
-[tool.setuptools_scm]
-write_to = "src/protontricks/_version.py"
-
 [tool.coverage.report]
 omit = [
   "*/protontricks/_vdf/*"
diff --git a/requirements_dev.txt b/requirements_dev.txt
index 2dd3d35..8a7523c 100644
--- a/requirements_dev.txt
+++ b/requirements_dev.txt
@@ -1,3 +1,2 @@
 pytest>=6.0
 pytest-cov>=2.10
-setuptools-scm
diff --git a/setup.cfg b/setup.cfg
index 239b928..3f27a93 100644
--- a/setup.cfg
+++ b/setup.cfg
@@ -30,8 +30,6 @@ include_package_data = True
 install_requires =
     vdf>=3.2
     Pillow
-setup_requires =
-    setuptools-scm
 python_requires = >=3.7
 
 [options.packages.find]
