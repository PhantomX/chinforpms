prefix=/usr
libdir=${prefix}/lib64
includedir=${prefix}/include

Name: egl
Description: Mesa EGL Library
Version: _RPMVER_
Requires.private: x11, xext, xdamage >=  1.1, xfixes, x11-xcb, xcb, xcb-glx >=  1.8.1, xcb-dri2 >=  1.8, xxf86vm, libdrm >=  2.4.75
Libs: -L${libdir} -lEGL
Libs.private: -lpthread -pthread -lm -ldl
Cflags: -I${includedir}
