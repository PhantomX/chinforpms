 endif
 
 SOURCES_CXX := \
@@ -50,7 +51,6 @@ SOURCES_CXX := \
   _external/platform_util.o \
   _external/prngcd.o \
   _external/rijndael-alg-fst.o \
-  _external/tinyxml2.o \
   _external/sha1.o \
   _linux/defineForLinux.o
 
