diff --git a/mupen64plus-core/projects/unix/Makefile b/mupen64plus-core/projects/unix/Makefile
index 0579886..194e994 100755
--- a/mupen64plus-core/projects/unix/Makefile
+++ b/mupen64plus-core/projects/unix/Makefile
@@ -198,8 +198,8 @@ endif
 
 # set special flags per-system
 ifeq ($(OS), FREEBSD)
-  TARGET = libmupen64plus$(POSTFIX).so.2.0.0
-  SONAME = libmupen64plus$(POSTFIX).so.2
+  TARGET = libsimple64$(POSTFIX).so.2.0.0
+  SONAME = libsimple64$(POSTFIX).so.2
   LDFLAGS += -Wl,-Bsymbolic -shared -Wl,-export-dynamic -Wl,-soname,$(SONAME)
   LDLIBS += -L${LOCALBASE}/lib -lc
   ifeq ($(ARCH_DETECTED), 64BITS)
@@ -209,8 +209,8 @@ ifeq ($(OS), FREEBSD)
   endif
 endif
 ifeq ($(OS), LINUX)
-  TARGET = libmupen64plus$(POSTFIX).so.2.0.0
-  SONAME = libmupen64plus$(POSTFIX).so.2
+  TARGET = libsimple64$(POSTFIX).so.2.0.0
+  SONAME = libsimple64$(POSTFIX).so.2
   LDFLAGS += -Wl,-Bsymbolic -shared -Wl,-export-dynamic -Wl,-soname,$(SONAME)
   LDLIBS += -ldl
   # only export api symbols
@@ -224,7 +224,7 @@ endif
 ifeq ($(OS), OSX)
   OSX_SDK_PATH = $(shell xcrun --sdk macosx --show-sdk-path)
 
-  TARGET = libmupen64plus$(POSTFIX).dylib
+  TARGET = libsimple64$(POSTFIX).dylib
   LDFLAGS += -framework CoreFoundation -dynamiclib
   LDLIBS += -ldl
   ifeq ($(ARCH_DETECTED), 64BITS)
@@ -252,7 +252,7 @@ ifeq ($(OS), OSX)
   endif
 endif
 ifeq ($(OS), MINGW)
-  TARGET = mupen64plus$(POSTFIX).dll
+  TARGET = simple64$(POSTFIX).dll
   ifeq ($(CC), clang)
     LDFLAGS += -shared -Wl,-export-all-symbols
   else
@@ -507,13 +507,13 @@ ifeq ($(PREFIX),)
   PREFIX := /usr/local
 endif
 ifeq ($(SHAREDIR),)
-  SHAREDIR := $(PREFIX)/share/mupen64plus
+  SHAREDIR := $(PREFIX)/share/simple64
 endif
 ifeq ($(LIBDIR),)
   LIBDIR := $(PREFIX)/lib
 endif
 ifeq ($(INCDIR),)
-  INCDIR := $(PREFIX)/include/mupen64plus
+  INCDIR := $(PREFIX)/include/simple64
 endif
 
 # list of required source files for compilation
